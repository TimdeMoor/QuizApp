<Window x:Class="Quizapp.frmConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizapp"
        mc:Ignorable="d"
        Title="frmConfirm" Height="200" Width="400">
    <Grid>
        <Label x:Name="lblMessage" Content="Message" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnPositive" Content="1" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Bottom" Width="50" Height="50" Click="BtnPositive_Click"/>
        <Button x:Name="btnNegative" Content="0" HorizontalAlignment="Right" Margin="10,10,10,10" VerticalAlignment="Bottom" Width="50" Height="50" Click="BtnNegative_Click"/>
    </Grid>
</Window>
