<Window x:Class="Quizapp.frmSubCategorieDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizapp"
        mc:Ignorable="d"
        Title="" Height="300" Width="240" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Height="Auto" Margin="10" VerticalAlignment="Stretch" Width="Auto">
            <Label Content="Naam:" HorizontalAlignment="Center"/>
            <TextBox Height="23" TextWrapping="Wrap" Margin="10" Name="txtNaam"/>
            <Label Content="Beschrijving:" HorizontalAlignment="Center"/>
            <TextBox Height="23" TextWrapping="Wrap" Margin="10" Name="txtBeschrijving"/>
            <Label Content="SubCategorie:" HorizontalAlignment="Center"/>
            <ComboBox Height="23" DisplayMemberPath="naam" Margin="10, 10, 10, 0" Name="cmbSubCategorie"/>
            <Button Name="btnGeenCategorie" Content="Geen SubCategorie" Margin="10, 0, 10, 10" Click="btnGeenCategorie_Click"/>
        </StackPanel>
        <Button Content="Submit" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Bottom" Width="75" Name="btnSubmit" Click="btnSubmit_Click"/>
    </Grid>
</Window>
