<Window x:Class="Quizapp.frmVraagDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quizapp"
        mc:Ignorable="d"
        Title="frmVraagDetails" Height="500" Width="350" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Height="Auto" Margin="10" VerticalAlignment="Stretch" Width="Auto">
            <Label Content="Vraag:" HorizontalAlignment="Center"/>
            <TextBox Height="23" TextWrapping="Wrap" Margin="10" Name="txtVraag"/>
            <Label Content="Antwoorden:" HorizontalAlignment="Center"/>
            <ListBox x:Name="lstAntwoorden" Height="200" Margin="10"/>
            <Button x:Name="btnAntwoordToevoegen" Content="+" Width="20" Click="btnAntwoordToevoegen_Click"/>
            <Label Content="SubCategorie:" HorizontalAlignment="Center"/>
            <ComboBox Height="23" Margin="10" DisplayMemberPath="naam" Name="cmbSubCategorie"/>
        </StackPanel>
        <Button Content="Submit" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Bottom" Width="75" Name="btnSubmit" Click="btnSubmit_Click"/>
    </Grid>
</Window>
