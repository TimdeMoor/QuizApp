@model GebruikerDetailsViewModel
@{
    <h1>Details van Gebruiker @Model.Name</h1>
    <form method="post">
        <table class="table table-hover">

            <tr>
                <td><b>ID:</b></td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td><b>Naam:</b></td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td><b>Email:</b></td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td><b>Admin:</b></td>
                <td>@Model.IsAdmin</td>

                <td><input type="hidden" value="@Model.Id" name="txtId" /></td>
                @if (!Model.IsAdmin)
                {
                    <td><input type="submit" class="btn btn-danger" value="Maak Admin" asp-controller="User" asp-action="Promote"></td>
                }
                else
                {
                    <td><input type="submit" class="btn btn-danger" value="Wis Admin" asp-controller="User" asp-action="Demote"></td>
                }

            </tr>
        </table>
    </form>

    <form method="post">
        <input type="hidden" value="@Model.Id" name="txtId" />
        <div class="container">
            <!-- Trigger the modal with a button -->
            <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal">Delete</button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Verwijderen?</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <p>Weet je zeker dat je dit item wilt verwijderen?</p>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-danger" value="Ja" asp-controller="User" asp-action="Delete">
                            <button type="button" class="btn btn-success" data-dismiss="modal">Nee</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
