@model SubCategorieLijstViewModel
@{
    <div class="text-center">
        <div class="jumbotron-fluid">
            <h1 class="display-4">The Big Question Quiz</h1>
        </div>

        <form method="post">
            <label>Aantal Vragen:<input type="number" name="txtAantalVragen" value="5" placeholder="5" max="100" min="1" /></label><br />
            <div class="row justify-content-center">
                <div class="col-2">
                    <div class="multiselect">
                        <div class="selectBox" onclick="showCheckboxes()">
                            <label>
                                <select>
                                    <option>Alle Categorieën</option>
                                </select>
                            </label>
                            <div class="overSelect"></div>
                        </div>
                        <div id="checkboxes">
                            @foreach (SubCategorieDetailsViewModel sc in Model.SubCategorieLijst)
                            {
                                <label><input type="checkbox" value="C @sc.Id" name="C @sc.Id" />@sc.Naam</label>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <input type="submit" asp-controller="Game" asp-action="StartGame" value="START">
        </form>
    </div>
}
